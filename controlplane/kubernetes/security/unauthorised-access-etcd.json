{
    "version": "1.0.0",
    "title": "Exploring Unauthorised Access to Etc.d",
    "description": "Unauthorised access to Etc.d is equivalent to having Cluster Admin Permissions. Explore whether it is protected at multiple-levels, not simply network policies.",
    "tags": [
        "controlplane",
        "kubernetes",
        "security"
    ],
    "steady-state-hypothesis": {
        "title": "Can we access etc.d known ips",
        "probes": [
            {
                "type": "probe",
                "name": "check-access-to-known-list-of-etcd-ips",
                "tolerance": 0,
                "provider": {
                    "type": "process",
                    "path": "sh",
                    "arguments": [
                        "returnlist.sh"
                    ]
                }
            }
        ]
    },
    "method": [
		{
            "type": "action",
            "name": "delete-network-policies",
            "provider": {
                "type": "process",
                "path": "echo"
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "restore-network-policies",
            "provider": {
                "type": "process",
                "path": "echo"
            }
        }
    ]
}
